import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextField;

public class scrollbar {

	public static void main(String[] args) {
		
		int n_frame = 5;
		
		JFrame frame = new JFrame("");

		String[] arr = {"a","b","c"};
		
		frame.getContentPane().setLayout(null);
		frame.setVisible(true);
		frame.setSize(260, 330);

		JPanel big_panel = new JPanel();
		big_panel.setLayout(new GridLayout(n_frame,1));
		big_panel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		
		//big_panel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		big_panel.setVisible(true);
		
		
		JScrollPane spanel 
		= new JScrollPane(big_panel, JScrollPane.VERTICAL_SCROLLBAR_ALWAYS, JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);
		
		
		frame.getContentPane().add(spanel);
		spanel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		spanel.setVisible(true);
		
		JPanel panel1 = new JPanel();
		panel1.setSize(spanel.getWidth(), spanel.getHeight());
		spanel.add(panel1);
		panel1.setVisible(true);
		
		JButton b1 =new JButton("aa");
		b1.setBounds(112, 128, 116, 24);	//안하면 안나옴 (아마 크기 0인듯)
		panel1.add(b1);						//안하면 안 나옴
	
		
	}//end creator


}//end

