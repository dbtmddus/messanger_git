import java.awt.GridLayout;
import java.util.Vector;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

public class swing_test {

	static Vector<JPanel> arr_panel = new Vector<JPanel>(0);
	static Vector<JButton> arr_button = new Vector<JButton>(0);

	private JFrame frame;
	private	JScrollPane spanel;

	public swing_test(){

		int n_frame = 5;
		
		JFrame frame = new JFrame("");

		String[] arr = {"a","b","c"};
		
		frame.getContentPane().setLayout(null);
		frame.setVisible(true);
		frame.setSize(260, 330);

		JPanel big_panel = new JPanel();
		big_panel.setLayout(new GridLayout(n_frame,1));
		big_panel.setBounds(0,0,frame.getContentPane().getBounds().width, 60*n_frame);	//핵심 
		big_panel.setVisible(true);					//
		
		//for (int i=0; i<n_frame; i++){
			JPanel panel1 = new JPanel();
			//panel1.setBounds(0, 0 ,(int)big_panel.getBounds().getWidth(), 60);
		
			JButton b1 = new JButton("New button");
			b1.setBounds(panel1.getBounds());
			panel1.add(b1);
			
			big_panel.add(panel1);
			//
			JPanel panel2 = new JPanel();
			big_panel.add(panel2);
				
			JButton b2 = new JButton("New button");
			b2.setBounds(panel2.getBounds());
			panel2.add(b2);
			
		//}
		
		JScrollPane spanel 
		= new JScrollPane(big_panel, JScrollPane.VERTICAL_SCROLLBAR_ALWAYS, JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);
		frame.getContentPane().add(spanel);
		
		spanel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		spanel.setVisible(true);
		
	}//end creator


	public void f_repaint(){
		spanel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		for (int i=0; i< arr_panel.size(); i++){
			JPanel panel = arr_panel.get(i);
			panel.setBounds(0, 70*i ,(int)spanel.getBounds().getWidth(), 60);
			
			//panel.ali
			//panel.getComponents()[0].setBounds(panel.getBounds());
			//repaint();
		}
	}
