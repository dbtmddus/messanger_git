import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextField;

public class swing_test {

	public swing_test(){
		JFrame frame = new JFrame("");

		String[] arr = {"a","b","c"};
		
		frame.getContentPane().setLayout(null);
		frame.setVisible(true);
		frame.setSize(260, 330);

		JScrollPane spanel 
		= new JScrollPane(null, JScrollPane.VERTICAL_SCROLLBAR_ALWAYS, JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);
		frame.getContentPane().add(spanel);
		spanel.setBounds(frame.getContentPane().getBounds());	//안하면 안나옴 (아마 크기 0인듯)
		spanel.setVisible(true);
		
		JPanel panel1 = new JPanel();
		panel1.setSize(spanel.getWidth(), spanel.getHeight());
		spanel.add(panel1);
		panel1.setVisible(true);
		
		JButton b1 = new JButton("New button");
		b1.setBounds(panel1.getBounds());
		panel1.add(b1);
	
	}
	public static void main(String[] args) {
		
		swing_test s = new swing_test();
		
	}//end creator
}//end

