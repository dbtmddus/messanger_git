

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextPane;
import java.awt.Component;

class testt{
	public static void main(String args[]){
		JFrame f = new JFrame("ScrollPaneTestttt");
		JScrollPane sp = new JScrollPane();
		JPanel p = new JPanel();   
		f.setSize(350, 157);
		
		sp.setBounds(f.getContentPane().getBounds());
		sp.setViewportView(p);
		
		p.setLayout(new BoxLayout(p, BoxLayout.Y_AXIS));
		
		JButton b1 = new JButton("11111111");
		p.add(b1);
		JTextPane fp = new JTextPane();
		fp.setAlignmentX(Component.LEFT_ALIGNMENT);
		fp.setText("sssssssss");
		p.add(fp);
		
		JButton b3 = new JButton("3");
		p.add(b3);
		b3.setAlignmentX(Component.RIGHT_ALIGNMENT);
		
		
		//p.setBounds(0,0,f.getContentPane().getWidth(),1000);

		
		f.getContentPane().add(sp);    
		f.setVisible(true);             

	}
}

