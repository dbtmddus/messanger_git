package client_swing;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
 
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
 
public class simple_alert {
    
    JFrame frame;
    JButton alertBtn;
    
    public simple_alert() {
        frame = new JFrame("test");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(300, 300);
        frame.setVisible(true);
        
        alertBtn = new JButton("alert");
        alertBtn.addActionListener(new AlertActionListener());
        frame.add(alertBtn);
    }
    
    public static void showInfoBox(String msg, String title) {
        JOptionPane.showMessageDialog(null, msg, title, JOptionPane.INFORMATION_MESSAGE);
    }
    
    class AlertActionListener implements ActionListener {
        @Override
        public void actionPerformed(ActionEvent e) {
            simple_alert.showInfoBox("alert 내용 입니다.", "Title");
        }
    }
    
    public static void main(String[] args) {
        simple_alert alert1 = new simple_alert();
        alert1.showInfoBox("ddd", "tt");
        	
    }
}


