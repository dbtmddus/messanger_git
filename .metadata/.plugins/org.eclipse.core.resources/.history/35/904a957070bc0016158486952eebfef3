import java.awt.*;

 

class ScrollPaneTest{

       public static void main(String args[]){

             Frame f = new Frame("ScrollPaneTest");

             f.setSize(300, 200);

             

             ScrollPane sp = newS crollPane();

             Panel p = new Panel();

             //Panel의배경을green으로한다.

             p.setBackground(Color.green);

             //Button을Panel에포함시킨다.

             p.add(new Button("첫번째"));

             p.add(new Button("두번째"));      

             p.add(new Button("세번째"));

             p.add(new Button("네번째"));

             

             //Panel을ScrollPane에포함시킨다.

             sp.add(p);

             //ScrollPane을Frame에포함시킨다.

             f.add(sp);

             f.setVisible(true);

       }

}

